<section id="services">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="row">
          <div class="panel panel-info">
            <div class="panel-heading">
              <div class="panel-title">
                <div class="row">
                  <div class="col-xs-12 centered">
                    <h3>Thank You For Your Order!</h3>
                    <h4>Order Number: <%= @box.order_number %></h4>
                  </div>  
                </div>
              </div>
            </div>

            <div class="panel-body">
            <% unless @jacket.nil? %>
              <div class="row">
                <div class="col-md-6 col-md-offset-1">
                <%= image_tag @jacket.image_url, class: "img-responsive center-block" %>
                </div>
                <div class="col-md-2">
                  <h4 class="product-name "><strong><%= @jacket.name %></strong></h4>
                </div>
                <div class="col-md-2">
                  <div class="col-xs-6 text-right">
                    <h4><strong> <%= @jacket.price %> </strong></h4>
                  </div>
                </div>
              </div>
              <hr>
            <% end %>
              
            <% unless @shirt.nil?  %>
              <div class="row">
                <div class="col-md-6 col-md-offset-1">
                <%= image_tag @shirt.image_url, class: "img-responsive center-block" %>
                </div>
                <div class="col-md-2">
                  <h4 class="product-name"><strong><%= @shirt.name %></strong></h4>
                </div>
                <div class="col-md-2">
                  <div class="col-xs-6 text-right">
                    <h4><strong><%= @shirt.price %></strong></h4>
                  </div>
                </div>
              </div>
              <hr>
            <% end %>
              
            <% unless @pants.nil? %>
              <div class="row">
                <div class="col-md-6 col-md-offset-1">
                <%= image_tag @pants.image_url, class: "img-responsive center-block" %>
                </div>
                <div class="col-md-2">
                  <h4 class="product-name"><strong><%= @pants.name %></strong></h4>
                </div>
                <div class="col-md-2">
                  <div class="col-xs-6 text-right">
                    <h4><strong><%= @pants.price %></strong></h4>
                  </div>
                </div>
              </div>
            <% end %>

            </div>
            <div class="panel-footer">
              <div class="row text-center">
                <div class="col-md-2 col-md-offset-8">
                  <h4 class="text-right">Total <strong>$<%= @total_price %></strong></h4>
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</section>
