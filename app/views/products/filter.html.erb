<div class="container">
	<div class="row clearfix">
		<!-- Boys Search -->
		<div class="col-md-6 column">
		<h1>Select for Boys</h1>
			<%= form_for Product.new do |f| %>
			<div>
				<%= f.label "Select a Shirt Size" %>
				<%= f.text_field(:shirt_size) %>
			</div>
			
			<div>
				<%= f.label "Select a Pants Size" %>
				<%= f.text_field(:pants_size) %>
			</div>
			
			<div>
				<%= f.label "Select a Jacket Size" %>
				<%= f.text_field(:jacket_size) %>
			</div>
			
			<div>
				<%= f.submit "Let's Starting Building Your Box", :class => "btn btn-primary" %>
			
			</div>
			<% end %>
		</div>

		<!-- Girls -->
		<div class="col-md-6 column">
